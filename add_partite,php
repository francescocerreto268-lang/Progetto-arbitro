<?php
session_start();

ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

// ðŸ”’ Controllo accesso
if (empty($_SESSION['loggedin'])) {
    header("Location: login.php");
    exit;
}

// Connessione al DB
include 'db.php';

// Funzioni utili
function esc($s) { return htmlspecialchars($s ?? '', ENT_QUOTES | ENT_SUBSTITUTE, 'UTF-8'); }

function generate_csrf_token() {
    if (empty($_SESSION['csrf_token'])) {
        $_SESSION['csrf_token'] = bin2hex(random_bytes(32));
    }
    return $_SESSION['csrf_token'];
}

function verify_csrf_token($token) {
    return !empty($token) && !empty($_SESSION['csrf_token']) && hash_equals($_SESSION['csrf_token'], $token);
}

$error = "";

//so chi Ã¨ loggato in questo momento 

// ðŸ”¹ Recupero lista arbitri
$stmt = $conn->prepare("SELECT id, nome, cognome FROM utente WHERE id = ?");
$stmt->bind_param('i', $_SESSION['id']);
$stmt->execute();
$arbitri = $stmt->get_result();


// Gestione form
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    if (!verify_csrf_token($_POST['csrf_token'] ?? '')) {
        $error = 'Token CSRF non valido.';
    } else {
        $s_casa    = trim($_POST['s_casa']);
        $s_ospite  = trim($_POST['s_ospite']);
        $indirizzo = trim($_POST['indirizzo']);
        $rimborso  = (float) $_POST['rimborso'];
        $km        = (float) $_POST['km_percorsi'];
        $arbitro_id = (int) $_POST['arbitro_id'];
        $data =  new DateTime ($_POST['data_ora']);
        $data = $data->format('Y-m-d H:i');
        $stmt = $conn->prepare("INSERT INTO partite (s_casa, s_ospite, indirizzo, rimborso, km_percorsi, arbitro_id, data_ora_partita) VALUES (?, ?, ?, ?, ?, ?, ?)");
        $stmt->bind_param("sssddis", $s_casa, $s_ospite, $indirizzo, $rimborso, $km, $arbitro_id, $data);

        if ($stmt->execute()) {
            header("Location: partite.php");
            exit;
        } else {
            $error = "Errore inserimento partita: " . $conn->error;
        }
    }
}

$csrf = generate_csrf_token();
?>
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Aggiungi Partita</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Aggiungi nuova partita</h4>
        </div>
        <div class="card-body">
            <p>Ciao <b><?= esc($_SESSION['nome']) ?></b>, completa il modulo per aggiungere una nuova partita:</p>

            <?php if ($error): ?>
                <div class="alert alert-danger"><?= esc($error) ?></div>
            <?php endif; ?>

            <form method="post"  id="partitaForm"> 
                <input type="hidden" name="csrf_token" value="<?= esc($csrf) ?>">

                <div class="mb-3">
                    <label class="form-label">Squadra casa</label>
                    <input type="text" class="form-control" name="s_casa" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Squadra ospite</label>
                    <input type="text" class="form-control" name="s_ospite" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Indirizzo</label>
                    <input type="text" class="form-control" name="indirizzo">
                </div>

                <div class="mb-3">
                    <label class="form-label">Rimborso (â‚¬)</label>
                    <input type="number" step="0.01" class="form-control" name="rimborso">
                </div>

                <div class="mb-3">
                    <label class="form-label">Km percorsi</label>
                    <input type="number" step="0.1" class="form-control" name="km_percorsi">
                </div>
              <div class="mb-3">
                    <label class="form-label">Data e ora </label>
                   <input type="datetime-local" id="data_ora" name="data_ora">
                </div>
                <div class="mb-3">
                    <label class="form-label">Arbitro</label>
                    <select name="arbitro_id" class="form-select" required>
                        <option value="">-- Seleziona arbitro --</option>
                        <?php while ($row = $arbitri->fetch_assoc()): ?>
                            <option value="<?= esc($row['id']) ?>">
                                <?= esc($row['cognome'] . " " . $row['nome']) ?>
                            </option>
                        <?php endwhile; ?>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="partite.php" class="btn btn-secondary">â¬… Torna alla lista partite</a>
                    <button type="submit" class="btn btn-success">Aggiungi partita</button>
                </div>
            </form>
            <div id="messaggio"> </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
<script>
document.getElementById("partitaForm").addEventListener("submit",function(e){
    e.preventDefault();
    const form=e.target;
    const dati=new FormData(form);
    fetch("add_partite.php",{
        method:"Post",
        body: dati
    })
    .then(response => response.text()) 
    .then(data=>{
        document.getElementById("messaggio").innerHTML = "<div class='alert alert-success'>Partita aggiunta!</div>";
        form.reset();
    })
    .catch(error => {
        document.getElementById("messaggio").innerHTML = "<div class='alert alert-danger'>Errore: " + error + "</div>";
    });
});
</script>
</html>
